<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/dialog_unlock_device_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    >
    <TextView
        android:id="@+id/dialog_unlock_device_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:text="@string/dialog_unlock_device_description"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/dialog_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valid ASCII Text"
        app:hintTextAppearance="@style/SettingsHintText"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/dialog_password_edit_text"
            android:theme="@style/SettingsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:inputType="textPassword"
            android:maxLength="19"
            />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>